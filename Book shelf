#include <stdio.h>
int main() {
    int n, i, key;
    printf("Enter number of books: ");
    scanf("%d", &n);
    int books[n];
    printf("Enter the Book IDs in ascending order:\n");
    for(i = 0; i < n; i++) {
        scanf("%d", &books[i]);
    }
    printf("Enter Book ID to search: ");
    scanf("%d", &key);
    int low = 0, high = n - 1, mid;
    int found = 0;
    // Binary Search
    while(low <= high) {
        mid = (low + high) / 2;
        if(books[mid] == key) {
            found = 1;
            break;
        }else if(books[mid] < key) {
            low = mid + 1;
        } else {
            high = mid - 1;
        }
    }
    if(found)
        printf("Book with ID %d is AVAILABLE in the bookshelf.\n", key);
    else
        printf("Book with ID %d is NOT AVAILABLE in the bookshelf.\n", key);
}
